                            </div>
                        </div>
                    </div>
                </div>

                <!-- Orginal Item Gurantee -->
                <div class="card card-default">
                    <div class="card-header">
                        ضمانت اصالت کالا
                    </div>
                    <div class="card-body">
                        <!-- OrginalItemGuranteeTitel -->
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-override-store-checkbox asp-for="OrginalItemGuranteeTitel_OverrideForStore" asp-input="OrginalItemGuranteeTitel" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="OrginalItemGuranteeTitel" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="OrginalItemGuranteeTitel" />
                                <span asp-validation-for="OrginalItemGuranteeTitel"></span>
                            </div>
                        </div>
                        <!-- OrginalItemGuranteeDescription -->
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-override-store-checkbox asp-for="OrginalItemGuranteeDescription_OverrideForStore" asp-input="OrginalItemGuranteeDescription" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="OrginalItemGuranteeDescription" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="OrginalItemGuranteeDescription" />
                                <span asp-validation-for="OrginalItemGuranteeDescription"></span>
                            </div>
                        </div>
                        <!-- OrginalItemGuranteeHiden -->
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-override-store-checkbox asp-for="OrginalItemGuranteeHiden_OverrideForStore" asp-input="OrginalItemGuranteeHiden" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="OrginalItemGuranteeHiden" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="OrginalItemGuranteeHiden" />
                                <span asp-validation-for="OrginalItemGuranteeHiden"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Btn Save -->
                <div class="card card-default">
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-md-9 offset-md-3">
                                <button type="submit" name="save" class="btn btn-primary">@T("Admin.Common.Save")</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>