                                <nop-label asp-for="MoneyBackGuaranteeHiden" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="MoneyBackGuaranteeHiden" />
                                <span asp-validation-for="MoneyBackGuaranteeHiden"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Full Time Support-->
                <div class="card card-default">
                    <div class="card-header">
                        پشتیبانی 24 ساعته و همه روزه
                    </div>
                    <div class="card-body">
                        <!-- FullTimeSupportTitel -->
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-override-store-checkbox asp-for="FullTimeSupportTitel_OverrideForStore" asp-input="FullTimeSupportTitel" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="FullTimeSupportTitel" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="FullTimeSupportTitel" />
                                <span asp-validation-for="FullTimeSupportTitel"></span>
                            </div>
                        </div>
                        <!-- FreeShippingDescription -->
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-override-store-checkbox asp-for="FreeShippingDescription_OverrideForStore" asp-input="FreeShippingDescription" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="FreeShippingDescription" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="FreeShippingDescription" />
                                <span asp-validation-for="FreeShippingDescription"></span>
                            </div>
                        </div>
                        <!-- FreeShippingHiden-->
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-override-store-checkbox asp-for="FreeShippingHiden_OverrideForStore" asp-input="FreeShippingHiden" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="FreeShippingHiden" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="FreeShippingHiden" />
